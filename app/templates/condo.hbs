<div class="container">
    <div class="row row-offcanvas row-offcanvas-right {{if offCanvasMenuOpen 'active'}}">
        <div class="col-xs-12">
          <ol class="breadcrumb">
            {{#if userHasSeveralCondos}}
              <li> 
                {{#link-to "condos"}}
                  <span class="glyphicon glyphicon-home"></span> Condominios
                {{/link-to}}
              </li>
            {{else}} 
              <li><span class="glyphicon glyphicon-home"></span> Condominios</li>
            {{/if}}            
            <li class="active">
              {{model.condo.name}} <small>(administrado por: {{model.condo.manager.name}})</small>
            </li>
            {{#if isResident}}
              <li class="active">Apartamento {{model.apartment.name}}</li>
            {{/if}}
          </ol>
        </div>

        <div class="col-xs-12">
          <button type="button" {{action "toggleMenu"}} class="btn btn-default visible-xs pull-right">
            <span class="glyphicon glyphicon-menu-left 
            {{if offCanvasMenuOpen 'glyphicon-menu-right'}}">
            </span>
          </button>    
        </div>

        <div class="col-xs-12 col-sm-9">
             {{outlet}}
        </div>

        <div class="col-xs-6 col-sm-3 sidebar-offcanvas">
          <div class="list-group">            
            {{#link-to "condo.dashboard" model.condo.id class="list-group-item"}}
              <span class="glyphicon glyphicon-dashboard"></span> Tablero
            {{/link-to}}

            {{#if isResident}}
              {{#link-to "condo.due-bills" model.condo.id class="list-group-item"}}
                <span class="glyphicon glyphicon-list-alt"></span> Facturas por Pagar
              {{/link-to}}
            {{/if}}

            {{#if (not isResident)}}
              {{#link-to "condo.unconfirmed-bills" model.condo.id class="list-group-item"}}
                <span class="glyphicon glyphicon-list-alt"></span> Facturas por Confirmar
              {{/link-to}}
            {{/if}}

            {{#if (not isResident)}}
              {{#link-to "condo.new-bill" model.condo.id class="list-group-item"}}
                <span class="glyphicon glyphicon-plus"></span> Nueva Factura
              {{/link-to}}
            {{/if}}
          
            {{#link-to "condo.bill-log" model.condo.id class="list-group-item"}}
              <span class="glyphicon glyphicon-book"></span> Hist&oacute;rico de Facturas
            {{/link-to}}

            {{#if (not isResident)}}
              {{#link-to "condo.new-outlay" model.condo.id class="list-group-item"}}
                <span class="glyphicon glyphicon-plus"></span> Nuevo Gasto
              {{/link-to}}
            {{/if}}

            {{#link-to "condo.outlay-log" model.condo.id class="list-group-item"}}
              <span class="glyphicon glyphicon-credit-card"></span> Hist&oacute;rico de Gastos
            {{/link-to}}
          </div>

        </div><!--/.sidebar-offcanvas-->
    </div>
</div>

