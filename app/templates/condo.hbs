<div class="container">
    <div class="row">
         <button type="button" {{action "toggleMenu"}} 
          class="btn btn-primary visible-xs pull-right">Men&uacute;</button>    
    </div>
    
    <div class="row row-offcanvas row-offcanvas-right {{if offCanvasMenuOpen 'active'}}">   
        <div class="col-xs-12 col-sm-9">
             {{outlet}}
        </div>

        <div class="col-xs-6 col-sm-3 sidebar-offcanvas">
          <div class="list-group">
            {{#link-to "condo.dashboard" model.condoId class="list-group-item"}}
              <span class="glyphicon glyphicon-dashboard"></span> Tablero
            {{/link-to}}

            {{#if isResident}}
              {{#link-to "condo.due-bills" model.condoId class="list-group-item"}}
                <span class="glyphicon glyphicon-plus"></span> Facturas por Pagar
              {{/link-to}}
            {{/if}}

            {{#if (not isResident)}}
              {{#link-to "condo.unconfirmed-bills" model.condoId class="list-group-item"}}
                <span class="glyphicon glyphicon-list-alt"></span> Facturas por Confirmar
              {{/link-to}}
            {{/if}}

            {{#if (not isResident)}}
              {{#link-to "condo.new-bill" model.condoId class="list-group-item"}}
                <span class="glyphicon glyphicon-plus"></span> Nueva Factura
              {{/link-to}}
            {{/if}}
          
            {{#link-to "condo.bill-log" model.condoId class="list-group-item"}}
              <span class="glyphicon glyphicon-book"></span> Hist&oacute;rico de Facturas
            {{/link-to}}

          </div>
        </div><!--/.sidebar-offcanvas-->
    </div>
</div>

