<h2>Facturas Pagadas por Confirmar 
    {{#if loading}}<img class="img-tiny" src="{{rootURL}}/loading.gif">{{/if}}
</h2>

{{#results-panel results=results noResultsMsg='No hay facturas por confirmar'}}
    {{#each results as |bill|}}
        {{condo-bill-list-item view-link='condo.unconfirmed-bill' bill=bill}}
    {{/each}}
{{/results-panel}}

{{#if moreResultsToLoad}}
    <button class="btn btn-default" type="button" {{action "loadMoreResults"}}>
        Cargar m&aacute;s
    </button>
{{/if}}
