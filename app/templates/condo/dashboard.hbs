<div class="row">
    <div class="col-xs-8">
        <h3>Condominio {{model.c.name}}</h3>
        <h4>Administrado por: {{model.c.manager.name}}</h4>
    </div>
    <div class="col-xs-4 text-right">
        <p><strong>Apartamentos: </strong>{{model.cSts.stats.apartmentCount}}</p>
        <p><strong>Residentes: </strong>{{model.cSts.stats.residentCount}}</p>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h4>Balance General: <strong> {{pesos model.cSts.stats.balance}}</strong></h4>
    </div>
</div>

<div class="monthly-balance">
    <div class="row">
        <div class="col-xs-12">
            <h4 class='header-with-divider'>Balance del Mes</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
            <strong>Recaudados:</strong> {{pesos model.billSts.stats.paidConfirmedBillTotal}}
            en {{model.billSts.stats.paidConfirmedBillCount}} factura(s)           
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <strong>Gastados: </strong>{{pesos model.os.stats.amount}}
        </div>

        <div class="col-xs-12 col-sm-6 col-md-4">
            <strong>Facturas pendientes: </strong>{{model.billSts.stats.pendingBillCount}}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">            
            <strong>Facturas por confirmar: </strong>
            <span class="badge">
                {{model.billSts.stats.paidAwaitingConfirmationBillCount}}
            </span>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <strong>Facturas rechazadas: </strong>
            <span class="badge">{{model.billSts.stats.rejectedBillCount}}</span>
        </div>
    </div>
</div>

<div class="row">
    <div class='col-xs-12'>    
        <div class="panel panel-info">
            <div class="panel-heading">Ultimos Gastos</div>  
            <div class="panel-body">
                {{#unless model.outlays.length}}
                    <div class='summary'>
                        No hay nuevos gastos este mes.
                    </div>
                {{/unless}}

                {{#each model.outlays as |outlay|}}
                    <div class='summary'>
                        {{translate outlay.category}}, <strong>{{pesos outlay.amount}}</strong>
                        en {{translate outlay.createdOn.month}} {{outlay.createdOn.dayOfMonth}},
                        {{#if outlay.comment}}
                            ({{outlay.comment}})
                        {{/if}}
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div> 